<h1>Add Course</h1>
<form action="/add" method="POST">
  <div class="input-field">
    <input placeholder="Course Name" id="title" type="text" class="validate" required>
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="Type name"></span>
  </div>
  
  <div class="input-field">
    <input placeholder="Price" id="price" type="number" class="validate" required>
    <label for="price">Price</label>
    <span class="helper-text" data-error="Type price"></span>
  </div>
  
  <div class="input-field">
    <input id="img" type="text" class="validate" required>
    <label for="img">URL of image</label>
    <span class="helper-text" data-error="type url" ></span>
  </div>
  
  <button class="btn btn-primary">Add</button>
</form>